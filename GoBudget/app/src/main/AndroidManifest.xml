<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.gobudget">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.android.gobudget.PopActivity"
            android:label="@string/title_activity_pop"
            android:theme="@style/AppTheme.PopMe"></activity>
        <activity
            android:name="com.android.gobudget.History"
            android:label="@string/title_activity_history"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.android.gobudget.Settings"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.android.gobudget.Projection"
            android:label="@string/title_activity_projection"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.android.gobudget.Budget"
            android:label="@string/title_activity_budget"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.android.gobudget.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.android.gobudget.AddPurchaseActivity" />
        <activity android:name="com.android.gobudget.AddCategory" />
    </application>

</manifest>